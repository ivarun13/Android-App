<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:weightSum="1">

    <!--<TextView-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:textAppearance="?android:attr/textAppearanceLarge"-->
    <!--android:text="Name"-->
    <!--android:id="@+id/textView4" />-->





    <ImageView
        android:layout_width="396dp"
        android:layout_height="wrap_content"
        android:src="@drawable/onlinefoodordering"
        android:layout_above="@+id/TFname"
        android:layout_marginBottom="30dp" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Please Enter Your Name"
        android:textColorHint="@android:color/holo_green_dark"
        android:id="@+id/TFname" />

    <!--<TextView-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:textAppearance="?android:attr/textAppearanceLarge"-->
    <!--android:text="Email Address"-->
    <!--android:id="@+id/textView5" />-->

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Please Enter Your E-mail"
        android:textColorHint="@android:color/holo_green_dark"
        android:id="@+id/TFemailaddress" />

    <!--<TextView-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:textAppearance="?android:attr/textAppearanceLarge"-->
    <!--android:text="Password"-->
    <!--android:id="@+id/textView6" />-->

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_marginTop="20dp"
        android:hint="Please Enter Password"
        android:textColorHint="@android:color/holo_green_dark"
        android:id="@+id/TFSpass" />

    <!--<TextView-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:textAppearance="?android:attr/textAppearanceLarge"-->
    <!--android:text="Conform Password"-->
    <!--android:id="@+id/textView7" />-->

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_marginTop="20dp"
        android:hint="Please Re-Enter Password"
        android:textColorHint="@android:color/holo_green_dark"
        android:id="@+id/TFconpass" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TFconpass"
        android:layout_below="@+id/TFconpass"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:text="Register"
        android:id="@+id/Bsignupbutton"
        android:layout_gravity="center_horizontal"
        android:onClick="onSignupClick"
        style="?android:attr/borderlessButtonStyle"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="bold"
        android:typeface="serif"
        android:textSize="18sp"/>

    <TextView android:id="@+id/link_login"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Bsignupbutton"
        android:layout_marginTop="25dp"
        android:text="Already has account! Login here"
        android:textColor="@android:color/holo_red_dark"
        android:gravity="center"
        android:textSize="16dip"
        android:onClick="onClick" />

</LinearLayout>